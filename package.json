{
  "name": "server",
  "version": "1.0.0",
  "description": "A minimal boilerplate for typescript and express",
  "main": "index.js",
  "scripts": {
    "dev": "tsnd --transpile-only --ignore-watch node_modules --respawn ./src/server.ts",
    "ts:watch": "tsc -w",
    "ts:build": "tsc",
    "serve": "nodemon ./dist/src/server.js",
    "watch": "concurrently \"npm run ts:watch\" \"npm run serve\"",
    "build": "npm run ts:build",
    "prod:serve": "node ./dist/src/server.js",
    "start": "npm run build && npm run prod:serve"
  },
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.31",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.18",
    "pg": "^8.5.1",
    "typescript": "^4.2.2"
  },
  "devDependencies": {
    "@types/webpack": "^4.4.0",
    "concurrently": "^3.5.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6"
  }
}
